# ShortsCreator Environment Configuration
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py
PYTHONPATH=/app

# API Configuration
# PORT=5000

# Security (Optional - add if you want authentication)
# API_KEY=your-secret-api-key

# Storage Configuration (Optional)
# UPLOAD_MAX_SIZE=1000000000  # 1GB in bytes
# TEMP_DIR=/app/temp
# JOBS_DIR=/app/jobs

# Video Processing Settings
# MAX_CONCURRENT_JOBS=4
# VIDEO_MAX_DURATION=1800  # 30 minutes in seconds

# Whisper Model Settings (Optional)
# WHISPER_MODEL=base  # tiny, base, small, medium, large
# WHISPER_DEVICE=cpu  # cpu or cuda

# Logging
# LOG_LEVEL=INFO